<div class="devise-background">
  <div class="container col-12 col-md-6 col-lg-4 devise-form">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions my-3">
        <%= f.button :submit, "Log in", class: "btn-light btn-devise" %>
      </div>
    <% end %>

    <div class="sub-links">
      <h5>You don't have an account?</h5>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-dark btn-devise" %>
      <h6 class="mt-2"><%= link_to "Forgot your password?", new_user_password_path, class: "text-white" %></h6>
    </div>
  </div>
</div>
