  <div class="small-container-white-100vh">
    <h2 class="text-center">My lists</h2>
    <div class="cards-lists">
      <% @lists.each do |list| %>
        <% backdrop = list.movies.first.backdrop_url%>
        <div class="position-relative">
        <%= link_to list_path(list), class: "text-decoration-none card-list",
                    style: "background-image:
                            linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)),
                            url(#{backdrop})" do %>
            <h3><%= list.name %></h3>
            <%= link_to raw("<i class='fa-solid fa-trash-can'></i>"),
                        list_path(list),
                        data: {turbo_method: :delete, turbo_confirm: "Remove this list?"},
                        class: "text-decoration-none destroy-icon-list" %>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>
